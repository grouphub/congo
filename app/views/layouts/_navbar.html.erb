<header class="navbar navbar-static-top">
  <nav>
    <ul class="nav navbar-nav">
      <li>
        <a href="" ng-click="drawerToggle()" class="sidebar-toggle">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
      </li>

      <li>
        <a class="logo-link" href="/">
          <div class="logo"></div>
        </a>
      </li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown messages-menu" ng-if="hasRole('broker') || hasRole('customer')">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="envelope">Notifications</i>
          <span class="icon-label">99</span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <a href="">You have 4 messages</a>
          </li>
        </ul>
      </li>

      <li class="dropdown messages-menu" ng-if="hasRole('broker') || hasRole('customer')">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="forms">To-Dos</i>
          <span class="icon-label">99</span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <a href="">You have 4 to-dos</a>
          </li>
        </ul>
      </li>

      <li ng-if="firstName()" class="dropdown">
        <a href="" class="dropdown-toggle" data-toggle="dropdown">
          {{firstName()}}
          <i class="caret"></i>
        </a>

        <ul class="dropdown-menu">
          <li>
            <a class="heading" href="">Accounts</a>
          </li>

          <li ng-repeat="account in accounts()">
            <a ng-href="/admin" ng-if="account.role.role == 'admin'">
              Admin
              <span class="label label-default role">Admin</span>
            </a>

            <a ng-href="/accounts/{{account.slug}}/{{account.role.role}}" ng-if="account.role.role != 'admin'">
              {{account.name}}
              <span class="label label-default role">{{account.role.role}}</span>
            </a>
          </li>

          <li class="divider" ng-if="accounts().length > 0"></li>

          <li>
            <a href="/users/{{currentUserId()}}">My Profile</a>
          </li>

          <li>
            <a href="" ng-click="signout()">
              Sign out
            </a>
          </li>
        </ul>
      </li>
    </ul>
  </nav>
</header>

