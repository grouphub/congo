files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/14_start_workers.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      

      set -x # activate debugging from here
      export HOME=/home/ec2-user
      . /opt/elasticbeanstalk/support/envvars
      cd $EB_CONFIG_APP_ONDECK
      #export WORKER_NAME=congo-$BOX_ENV-worker-1
      export BUNDLE=/home/ec2-user/bin/bundle
      su -c "WORKER_NAME=congo-$BOX_ENV-worker-1 leader_only $BUNDLE exec rake workers:start" $EB_CONFIG_APP_USER ||
      echo "Rake task failed to run, skipping seeding."
      set +x # deactivate debugging here
      true
